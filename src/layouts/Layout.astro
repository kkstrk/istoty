---
const { page, fullHeader } = Astro.props;
const home = 'EWA WRÓBLEWSKA';
const title = [page, home].filter(Boolean).join(' | ');
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<header>
			<h1>
				<a href={import.meta.env.BASE_URL}>EWA WRÓBLEWSKA</a>
			</h1>
			{fullHeader && (
				<h2 class="en">DIRECTOR OF SITE-SPECIFIC SPECTACLES, MERGING INSTALLATION ART AND DANCE.</h2>
				<h2 class="pl">REŻYSER WIDOWISK SITE-SPECIFIC, ŁĄCZĄCYCH TANIEC I INSTALACJĘ.</h2>
				<h3 class="education">
					Born in Poland, graduated with a Bachelor of Arts from Architectural Institute in Prague<br/>
					and with a postgraduate certificate of Contemporary Dance from Kunsthumaniora in Brussels.
				</h3>
				<h3 class="contact">
					CONTACT <a href="mailto:evva.wroblewska@gmail.com">evva.wroblewska@gmail.com</a>
				</h3>
			)}
		</header>
		<main>
			<slot />
		</main>
	</body>
</html>

<style is:global>
	@import url('https://fonts.cdnfonts.com/css/memogram');
	@import url('https://fonts.cdnfonts.com/css/flama');

	:root {
		--margin-vertical: 2rem;
		--margin-horizontal: 4rem;
	}
	body {
		font-family: 'Flama', sans-serif, system-ui;
		margin: 0;
		padding: 0;
		min-height: 100vh;
		overflow-x: hidden;
		overflow-y: auto;
		background-color: #F6F6F6;
		display: flex;
		flex-direction: column;
	}
	header {
		margin: var(--margin-vertical) var(--margin-horizontal);
		flex-shrink: 0;
		display: grid;
		grid-template-areas:
        	"h en ."
            "h pl ."
			"h edu addr";
		grid-template-columns: min-content max-content auto;
		align-items: center;
	}
	main {
		flex-grow: 1;
		display: flex;
		flex-direction: column;
	}
	h1, h2, h3 {
		margin: 0;
	}
	h1 {
		font-family: 'Memogram', sans-serif, system-ui;
		grid-area: h;
		margin-right: 2rem;
		height: 6rem;
    	line-height: 3.4rem;
	}
	h2, h3 {
		font-weight: normal;
	}
	h2 {
		font-size: .9rem;
		line-height: 1.3rem;
    	height: 1.1rem;
	}
	h3 {
		font-size: .85rem;
		line-height: 1.3rem;
	}
	a {
		color: inherit;
		text-decoration: none;
	}
	.en {
		grid-area: en;
	}
	.pl {
		grid-area: pl;
	}
	.education {
		grid-area: edu;
		align-self: end;
	}
	.contact {
		grid-area: addr;
		align-self: end;
		margin-left: 2rem;
	}
	.contact > a:hover {
		text-decoration: underline;
	}
</style>
